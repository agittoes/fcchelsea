.row-fluid.comment-form
  .span4
    =render signed_in_user
  .span8
    .comment-form
      =form_for [object, object.comments.build] do |f|
        %fieldset
          =f.text_area :text, class: 'span8', placeholder: 'დაწერეთ თქვენი კომენტარი...'
        =f.submit 'გამოქვეყნება', class: ['span3', 'btn', 'btn-primary']