.row-fluid
  .span8
    .post-page
      .post
        .title
          =@post.title
        .content
          -if @post.image
            .image
              =image_tag @post.image.url
          .text
            =@post.text
        .date
          =format_date(@post.created_at)

        .ctrl
          -if signed_in_user_has_admin_permissions?
            =link_to edit_post_path(@post), class: ['btn', 'btn-warning'] do
              Edit Post

      .comment-block
        %h3
          Comments

        -if user_signed_in?
          =render 'comments/form'

        .comments
          =render @post.comments

        -if user_signed_in?
          =render 'comments/form'