.row-fluid
  .span8.content
    .post-page
      =render partial: 'posts/post', :locals => {post: @post}

      .comments
        %h3
          Comments
        =form_for([@post, @comment]) do |f|
          %fieldset.comment-form
            =f.text_area :text
          =f.submit 'Send', class: ['btn', 'btn-primary']

        -@post.comments.each do |comment|
          .row-fluid.comment{:id=>comment.id}
            .span3.userinfo
              .image
                =image_tag comment.user.image, class: 'img-rounded'

              .name
                =comment.user.first_name
                =comment.user.last_name

              .date
                =time_ago_in_words comment.created_at, include_seconds: true
                ago
              .clearfix

            .span9
              %p.text
                =comment.text


  .span4.sidebar