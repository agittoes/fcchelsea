%h1
  New post

.row-fluid
  .span8
    =form_for @post do |f|
      %fieldset.standard-form
        =f.label :title
        =f.text_field :title

        =f.label :image
        =f.text_field :image

        =f.label :text
        =f.text_area :text

      =f.submit 'Create', class: ['btn', 'btn-primary', 'btn-large']