#myCarousel.carousel.slide
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  / Carousel items
  .carousel-inner
    .active.item
      =image_tag 'http://www.chelsea-fc.ru/ai/news/1331362/bgimage/RF.jpg'
    .item
      =image_tag 'http://www.chelsea-fc.ru/ai/news/1331174/bgimage/Mikel_Roma.jpg'
    .item
      =image_tag 'http://www.chelsea-fc.ru/ai/news/1331100/bgimage/b640.jpg'
  / Carousel nav
  %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} ‹
  %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} ›